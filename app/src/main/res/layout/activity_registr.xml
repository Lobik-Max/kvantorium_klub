<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/regbg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="200px"
            app:srcCompat="@drawable/logo_kvantorium_big"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150px"
            android:fontFamily="@font/theaterbold"
            android:text="РЕГИСТРАЦИЯ"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:textColorHint="#706260"
            android:textColor="@color/black"
            android:fontFamily="@font/theaterbold"
            android:id="@+id/name_ET"
            android:singleLine="true"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Фалимия"
            android:textColorHint="#706260"
            android:textColor="@color/black"
            android:fontFamily="@font/theaterbold"
            android:id="@+id/surname_ET"
            android:singleLine="true"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Направление"
            android:textColorHint="#706260"
            android:textColor="@color/black"
            android:fontFamily="@font/theaterbold"
            android:id="@+id/lesson_ET"
            android:singleLine="true"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginBottom="50px"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:textColorHint="#706260"
            android:textColor="@color/black"
            android:fontFamily="@font/theaterbold"
            android:id="@+id/email_ET"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:textColorHint="#706260"
            android:textColor="@color/black"
            android:fontFamily="@font/theaterbold"
            android:id="@+id/password_ET"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginBottom="50px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/theaterbold"
                android:text="Ученик"
                android:layout_marginRight="25px"
                android:id="@+id/student"/>

            <Button
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/theaterbold"
                android:text="Преподаватель"
                android:layout_marginLeft="25px"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
